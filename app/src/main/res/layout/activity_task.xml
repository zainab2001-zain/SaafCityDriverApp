<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfaf8"
    tools:context=".TaskActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#18421A"
        app:popupTheme="@style/Theme.DriverApp.PopupOverlay"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/camerascreen_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.1"
            android:text="Your Tasks"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar2"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/complaintnoheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/amaranth_bold"
            android:text="Complaint # "
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Complaint_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/complaintnoheading"
            android:fontFamily="@font/amaranth_bold"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/decriptionP_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Complaint_no"
            android:textSize="23sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/amaranth_bold"
            android:textAlignment="center"
            android:textColor="#292828"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:text="please press the button when the vehicle Reaches on Location." />

        <ImageView
            android:id="@+id/complaint_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/decriptionP_task"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/Dateheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/complaint_image"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/amaranth_bold"
            android:textSize="20sp"
            android:layout_marginLeft="125dp"
            android:textStyle="bold"
            android:textColor="#252525"
            android:text="Date: "/>
        <TextView
            android:id="@+id/Complaint_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/amaranth_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="#252525"
            android:layout_below="@id/complaint_image"
            android:layout_toRightOf="@id/Dateheading"/>

        <TextView
            android:id="@+id/Timeheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Dateheading"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amaranth_bold"
            android:textSize="20sp"
            android:layout_marginLeft="125dp"
            android:textStyle="bold"
            android:textColor="#252525"
            android:text="Time: "/>

        <TextView
            android:id="@+id/Complaint_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amaranth_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/Complaint_Date"
            android:textColor="#252525"
            android:layout_toRightOf="@id/Timeheading"/>

        <TextView
            android:id="@+id/Statusheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Timeheading"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amaranth_bold"
            android:textSize="20sp"
            android:textColor="#252525"
            android:layout_marginLeft="125dp"
            android:textStyle="bold"
            android:text="Status: "/>

        <TextView
            android:id="@+id/Complaint_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amaranth_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#252525"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/Complaint_Time"
            android:layout_toRightOf="@id/Statusheading"/>

        <Button
            android:id="@+id/Status_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reached"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            app:backgroundTint="#27302A"
            android:textSize="19sp"
            android:padding="15dp"
            android:layout_below="@id/Statusheading"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>