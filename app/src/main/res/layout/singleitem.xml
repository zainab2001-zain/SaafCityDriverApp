<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fbfaf8"
    android:layout_margin="10dp"
    app:cardCornerRadius="18dp"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:background="#A0D564"
        android:padding="12dp"

        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/displayno"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#071508"
            android:text="Complaint no "
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/c_noo"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#071508"
            android:textAlignment="center"
            android:layout_toRightOf="@id/displayno"
            />

        <Button
            android:id="@+id/displaybtn"
            android:layout_width="150dp"
            android:layout_height="40dp"




            android:layout_toRightOf="@id/c_noo"
            android:text=" Start"
            android:textColor="@color/white"
            app:backgroundTint="#1B3501" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>